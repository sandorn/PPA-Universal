<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
	<ribbon>
		<tabs>
			<tab id="CustomTabXml" getLabel="GetLabel" insertAfterMso="TabDeveloper">
				<group id="group1" getLabel="GetLabel">
					<toggleButton id="Tb101" onAction="TbOnAction" size="large" screentip="对齐基准,默认形状为基准，按下或选中一个形状，则以页面为基准" getPressed="GetTbState" getLabel="GetTbLabel" getImage="GetIcon" />
					<separator id="sep101" />
					<box id="box101">
					<button id="Bt101" onAction="OnAction" screentip="将选中对象左对齐" getLabel="GetLabel" imageMso="ObjectsAlignLeftSmart" />
					<button id="Bt102" onAction="OnAction" screentip="将选中对象水平居中" getLabel="GetLabel" imageMso="ObjectsAlignCenterHorizontalSmart" />
					<button id="Bt103" onAction="OnAction" screentip="将选中对象右对齐" getLabel="GetLabel" imageMso="ObjectsAlignRightSmart" />
					</box>
					<box id="box102">
					<button id="Bt111" onAction="OnAction" screentip="将选中对象顶对齐" getLabel="GetLabel" imageMso="ObjectsAlignTopSmart" />
					<button id="Bt112" onAction="OnAction" screentip="将选中对象垂直居中" getLabel="GetLabel" imageMso="ObjectsAlignMiddleVerticalSmart" />
					<button id="Bt113" onAction="OnAction" screentip="将选中对象底对齐" getLabel="GetLabel" imageMso="ObjectsAlignBottomSmart" />
					</box>
					<box id="box103">
					<button id="Bt104" onAction="OnAction" screentip="将选中对象横向分布" getLabel="GetLabel" imageMso="AlignDistributeHorizontally" />
					<button id="Bt114" onAction="OnAction" screentip="将选中对象纵向分布" getLabel="GetLabel" imageMso="AlignDistributeVertically" />
					</box> 
				</group>
				<group id="group11" getLabel="GetLabel">
					<box id="box120">
						<button id="Bt121" onAction="OnAction" screentip="以第一个形状为基准，将选中对象向左吸附" getLabel="GetLabel" getImage="GetIcon" />
						<button id="Bt122" onAction="OnAction" screentip="以第一个形状为基准，将选中对象向右吸附" getLabel="GetLabel" getImage="GetIcon" />
					</box>
					<box id="box121">
						<button id="Bt123" onAction="OnAction" screentip="以第一个形状为基准，将选中对象向上吸附" getLabel="GetLabel" getImage="GetIcon" />
						<button id="Bt124" onAction="OnAction" screentip="以第一个形状为基准，将选中对象向下吸附" getLabel="GetLabel" getImage="GetIcon" />
					</box>
				</group>
				<group id="group2" getLabel="GetLabel">
					<box id ="box201">
					<button id="Bt201" onAction="OnAction" screentip="以第一个形状为基准，将选中对象设置为等宽" getLabel="GetLabel"  imageMso="ShapeWidth" />
					<button id="Bt202" onAction="OnAction" screentip="以第一个形状为基准，将选中对象设置为等高" getLabel="GetLabel" imageMso="ShapeHeight" />
					<button id="Bt203" onAction="OnAction" screentip="以第一个形状为基准，将选中对象设置为等宽、等高" getLabel="GetLabel" imageMso="PowerPointPageSetup" />
					<button id="Bt204" onAction="OnAction" screentip="将选中的对象交换大小和位置" getLabel="GetLabel" getImage="GetIcon" />
					</box>
					<box id="box202">
					<button id="Bt211" onAction="OnAction" screentip="将选中对象向左延伸对齐" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt212" onAction="OnAction" screentip="将选中对象向右延伸对齐" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt213" onAction="OnAction" screentip="将选中对象向上延伸对齐" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt214" onAction="OnAction" screentip="将选中对象向下延伸对齐" getLabel="GetLabel" getImage="GetIcon" />
					</box>
				</group>
				<group id="group3" getLabel="GetLabel">
					<box id="box301">
					<button id="Bt301" onAction="OnAction" screentip="将选中对象左对齐到参考线" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt302" onAction="OnAction" screentip="将选中对象在参考线内水平居中" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt303" onAction="OnAction" screentip="将选中对象右对齐到参考线" getLabel="GetLabel" getImage="GetIcon" />
					</box>
					<box id="box302">
					<button id="Bt311" onAction="OnAction" screentip="将选中对象顶对齐到参考线" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt312" onAction="OnAction" screentip="将选中对象在参考线内垂直居中" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt313" onAction="OnAction" screentip="将选中对象底对齐到参考线" getLabel="GetLabel" getImage="GetIcon" />
					</box>
					<box id="box303">
					<button id="Bt321" onAction="OnAction" screentip="将选中对象宽度扩展到两个参考线之间" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt322" onAction="OnAction" screentip="将选中对象高度扩展到两个参考线之间" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt323" onAction="OnAction" screentip="将选中对象宽度高度扩展到参考线区域" getLabel="GetLabel" getImage="GetIcon" />
					</box>
				</group>
				<group id="group4" getLabel="GetLabel">
					<button id="Bt401" onAction="OnAction" screentip="隐藏选中对象，无选中对象时显示所有" getLabel="GetLabel"  getImage="GetIcon" />
					<button id="Bt402" onAction="OnAction" screentip="当设计元素超出 PPT 页面边缘时，点击可实现对边角料的快速裁除" getLabel="GetLabel" getImage="GetIcon" />
					<button id="Bt601" onAction="OnAction" getLabel="GetLabel" screentip="• 如果当前选中了形状，则在每个选中形状的相同位置和大小处新建一个无边框的矩形（矩形与原形状重叠），并选中新建的这些矩形。如果当前没有选中形状，而是选中了幻灯片，则在每个选中幻灯片上添加一个无边框的矩形" getImage="GetIcon" />
				</group>
				<group id="group5" getLabel="GetLabel">
					<button id="Bt501" onAction="OnAction" getLabel="GetLabel" screentip="格式化表格字体" imageMso="TableSelect" />
					<button id="Bt502" onAction="OnAction" getLabel="GetLabel" screentip="格式化文本框内字体 " imageMso="TextBoxInsert" />
					<button id="Bt503" onAction="OnAction" getLabel="GetLabel" screentip="格式化图表字体 (快捷键: Ctrl+3)" imageMso="ChartTrendline" />
				</group>
				<group id="group6" getLabel="GetLabel">
					<menu id="MenuSettings" getLabel="GetLabel" imageMso="FileManageMenu" size="large">
						<menuSeparator id="MenuSep1" title="语言" />
						<button id="MenuLang_zhCN" onAction="OnMenuAction" getLabel="GetLabel" getImage="GetMenuIcon" />
						<button id="MenuLang_enUS" onAction="OnMenuAction" getLabel="GetLabel" getImage="GetMenuIcon" />
						<menuSeparator id="MenuSep2" title="配置" />
						<button id="MenuSettings_Config" onAction="OnMenuAction" getLabel="GetLabel" screentip="打开格式化参数设置窗口" imageMso="FileProperties" />
						<menuSeparator id="MenuSep3" title="信息" />
						<button id="MenuSettings_About" onAction="OnMenuAction" getLabel="GetLabel" screentip="显示版本信息和插件说明" imageMso="About" />
					</menu>
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>