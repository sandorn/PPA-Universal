# EditorConfig 配置文件
# 用于统一代码格式，确保团队成员使用不同编辑器时保持一致的代码风格
# 更多信息：https://editorconfig.org/

# 根配置文件
root = true

# 所有文件通用设置
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

# C# 源代码文件
[*.cs]
indent_style = tab
indent_size = 4
tab_width = 4

# XML 文件
[*.xml]
indent_style = tab
indent_size = 4

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# 项目文件
[*.csproj]
indent_style = tab
indent_size = 2

[*.sln]
indent_style = tab
indent_size = 2

# 配置文件
[*.config]
indent_style = tab
indent_size = 2

# 资源文件
[*.resx]
indent_style = space
indent_size = 2

